---
import BaseLayout from '../layouts/BaseLayout.astro';

const pageTitle = "Contact Us";
const pageDescription = "Get in touch with the CipherFlow team. We'd love to hear your feedback or answer your questions.";
---
<BaseLayout title={pageTitle} description={pageDescription}>
  <div class="container mx-auto px-6 py-16">
    <div class="max-w-3xl mx-auto">
      <h1 class="text-4xl font-bold text-gray-900 dark:text-white mb-6">Contact Us</h1>
      <div class="prose dark:prose-invert max-w-none">
        <p>
          Have questions, feedback, or suggestions? We'd love to hear from you.
        </p>
        <p>
          This page is currently under construction. A contact form will be available here shortly.
        </p>
      </div>
    </div>
  </div>
</BaseLayout>